@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body class="bg-image" style="background-image: url('https://z-p3-scontent.fscl19-1.fna.fbcdn.net/v/t1.6435-9/106463463_1675118209302039_2091163847241264931_n.jpg?_nc_cat=102&ccb=1-7&_nc_sid=5f2048&_nc_eui2=AeFubWn_KRfZnVKDq1lKa0vZZF-KTEQ4xbpkX4pMRDjFuh5Z8q_nZtXJAM9kHHyV2sAspNwiWCoiCvuIhRVoqpYf&_nc_ohc=Gz3XvTonA5kAX-knhYH&_nc_ht=z-p3-scontent.fscl19-1.fna&oh=00_AfC3JWHEuDYG8tMbYRoYlzqxoZr6GLf_6-Ig0RunE7499Q&oe=662ED52A');">
    <br />
    <br />
    <br />
    <br />
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-10 mx-auto col-lg-5">
                <main class="form-signin w-100">
                    <h1>Login</h1>
                    <form action="@Url.Action("Login", "Login")" method="post" class="p-4 p-md-5 border rounded-3" style="background-color: rgba(255, 255, 255, 0.3);">
                        <div class="form-floating mb-3">
                            <input type="text" id="Nombre_Usuario" name="Nombre_Usuario" class="form-control" placeholder="name@example.com">
                            <label for="Nombre_Usuario">Nombre de Usuario</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" id="Contraseña" name="Contraseña" class="form-control" placeholder="Contraseña">
                            <label for="Contraseña">Contraseña</label>
                        </div>
                        <div class="checkbox mb-3">
                        </div>
                        <button class="w-100 btn btn-lg btn-primary" type="submit" data-url-autenticar="@Url.Action("Autenticar", "Login")">Login</button>
                        <hr class="my-4">
                        <p class="text-body-secondary">¿No tienes usuario? Crea uno <a href="#" data-toggle="modal" data-target="#registroModal">aquí</a>.</p>
                    </form>
                </main>
            </div>
        </div>
    </div>
    @* modal *@
    <div class="modal fade" id="registroModal" tabindex="-1" role="dialog" aria-labelledby="registroModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registroModalLabel">Crear Nuevo Usuario</h5>

                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <input type="email" class="form-control mb-2" id="correoUsuario" name="correoUsuario" placeholder="Correo/Usuario" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control mb-2" id="contraseña" name="contraseña" placeholder="Contraseña" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control mb-2" id="confirmarContraseña" name="confirmarContraseña" placeholder="Confirmar Contraseña" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control mb-2" id="nombre" name="nombre" placeholder="Nombre" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control mb-2" id="rut" name="rut" placeholder="RUT" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control mb-2" id="direccion" name="direccion" placeholder="Dirección" required>
                        </div>
                        <div class="form-group">
                            <input type="date" class="form-control" id="fechaNacimiento" name="fechaNacimiento" placeholder="Fecha de Nacimiento" required>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Registrarse</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
